#define F_CPU 1000000UL
#include <avr/io.h>
#include <util/delay.h>

int main(void)
{
    DDRA=0b11111111;
    while (1) 
    {  for (int i=0;i<4;i++)
	    {
		    for (int k=0;k<2;k++) {PORTA^=(1<<i);if(k==0){ _delay_ms(1000);}}
	    }
		for (int i=2;i>0;i--)
		{
			for (int k=0;k<2;k++) { PORTA^=(1<<i);if(k==0){ _delay_ms(1000);}}
		}}
	return 0;
}
